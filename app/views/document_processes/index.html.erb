<section class="content invoice">
  <div class="row">
    <div class="col-xs-12">
      <div class="box-body table-responsive">
        <table class="table table-hover">
          <thead>
            <th>Nome</th>
            <th>Quantidade de documentos</th>
            <th class="action-table">
              <%= link_to new_document_process_path(@document_processes), class:'btn btn-success'  do %>
                <span class="fa fa-plus"></span>
                  Novo
              <% end if current_user.can?('documentprocess:new') %>
            </th>
          </thead>
          <tbody>
            <%= content_tag_for(:tr, @document_processes) do |process| %>
              <td><%= process.name %></td>
              <td><%= process.document_types.size %></td>
              <td>
                <%= edit_buttom(edit_document_process_path(process), "documentprocess:edit") %>
                <%= destroy_buttom(process, "documentprocess:destroy") %>
              </td>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>

