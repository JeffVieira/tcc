<%= simple_form_for @user do |f| %>

  <%= f.input :name, label_html: { class: 'my_class' } %>

  <%= f.input :email, label_html: { class: 'my_class' } %>

  <%= f.input :password, label_html: { class: 'my_class' } %>

  <%= f.input :password_confirmation, label_html: { class: 'my_class' } %>

  <%= f.button :submit %>

<% end %>
