<!-- Check all button -->
<div class="btn-group">
  <%= link_to read_all_notifications_path do %>
    <button class="btn btn-default btn-sm" title="Ler todas"><i class="fa fa-child"></i></button>
  <% end %>
  <%= link_to delete_all_notifications_path do %>
    <button class="btn btn-default btn-sm" title="Esvaziar"><i class="fa fa-trash-o"></i></button>
  <% end %>
</div><!-- /.btn-group -->
<%= link_to notification_notifications_path do %>
  <button class="btn btn-default btn-sm"><i class="fa fa-refresh"></i></button>
<% end %>
<div class="pull-right">
  <%= page_entries_info @user_notifications %>
  <%= will_paginate @user_notifications %>
  <div class="btn-group">
    <button class="btn btn-default btn-sm"><i class="fa fa-chevron-left"></i></button>
    <button class="btn btn-default btn-sm"><i class="fa fa-chevron-right"></i></button>
  </div><!-- /.btn-group -->
</div><!-- /.pull-right -->
