<section class="content">
  <div class="row">
    <div class="col-md-3">
      <a href="compose.html" class="btn btn-primary btn-block margin-bottom">Notificação</a>
      <%= render "side_box" %>
    </div><!-- /.col -->
    <div class="col-md-9">
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Documentos</h3>
        </div><!-- /.box-header -->
        <div class="box-body no-padding">
          <div class="table-responsive mailbox-messages">
            <table class="table table-hover table-striped">
              <tbody>
                <% @documents.each do |document| %>
                <tr>
                  <td class="mailbox-star">
                    <%= link_to "<i class='fa #{document.icon} text-yellow'></i>".html_safe, validar_documents_path(id:document.id) %>
                  </td>
                  <td class="mailbox-name"><%= link_to document.name, validar_documents_path(id:document.id) %></td>
                  <td class="mailbox-subject"><b><%= document.user.name %></b></td>
                  <td class="mailbox-attachment"></td>
                  <td class="mailbox-date"><%= document.created_at %></td>
                </tr>
                <% end %>
              </tbody>
            </table><!-- /.table -->
          </div><!-- /.mail-box-messages -->
        </div><!-- /.box-body -->
        <div class="box-footer no-padding">
          <div class="mailbox-controls">
            <div>
              <%= page_entries_info @documents  %>
              <%= will_paginate @documents, renderer: BootstrapPagination::Rails %>
            </div><!-- /.pull-right -->
          </div>
        </div>
      </div><!-- /. box -->
    </div>
  </div>
</section>
